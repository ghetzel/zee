#homeContent{
  background-color: rgba(7, 4, 0, 75%);
  border: 10px solid #333;
  border-radius: 60px 180px;
  margin: 30px 0px;
  margin-left: 30px;
  margin-right: -60px;
  padding: 14px 60px 14px 36px;
}

#homeContent > QLabel{


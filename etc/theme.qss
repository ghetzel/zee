#library > #nowPlaying{
  background-color: rgb(3, 3, 3, 75%);
  border-top: 1px solid #444;
  border-bottom: 1px solid #444;
  padding: 2px;
}

  #library > #nowPlaying #npVitals{
    margin: 6px 8px;
    margin-bottom: 0px;
    padding-bottom: 2px;
    max-height: 12px;
    min-height: 12px;
  }

  #library > #nowPlaying > #npTime{
    max-width: 116px;
    min-width: 116px;
  }

  #library > #nowPlaying *[cls~="art"]{
                background: transparent middle middle no-repeat url(gfx/media-optical.png);
    border: 1px solid #888;
    margin: 2px;
    margin-top: 5px;
    margin-left: 8px;
    margin-right: 0px;
    max-height: 66px;
    max-width: 66px;
    min-height: 66px;
    min-width: 66px;
  }

  #library > #nowPlaying *[cls~="title"]{
    font-family: Akzidenz Grotesk Roman;
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 2px;
    margin-left: 8px;
    min-width: 760px;
  }

  #library > #nowPlaying *[cls~="artist"]{
    font-family: Akzidenz Grotesk Light;
    font-size: 16px;
    font-weight: bold;
    margin-left: 10px;
    margin-bottom: 4px;
    min-width: 760px;
  }

  #library > #nowPlaying *[cls~="album"]{
    font-family: Akzidenz Grotesk Light;
    font-size: 14px;
    font-style: italic;
    font-weight: bold;
    margin-left: 10px;
  }

  #library > #nowPlaying *[cls~="progress"]{
    background-color: transparent;
    border: 1px solid #E09900;
    color: transparent;
    max-height: 6px;
    min-height: 6px;
    min-width: 776px;
    padding: 1px;
  }

    #library > #nowPlaying *[cls~="progress"]::chunk{
      background-color: #E09900;
    }

  #library > #nowPlaying *[cls~="time"]{
    color: #AAA;
    font-family: Nimbus Sans L;
    font-size: 32px;
    font-weight: bold;
    max-height: 36px;
    max-width: 116px;
  }

  #library > #nowPlaying *[cls~="timeLeft"]{
    color: #AAA;
    font-family: Nimbus Sans L;
    font-size: 14px;
    font-weight: bold;
    max-height: 36px;
    max-width: 116px;
  }

  #library #browser QListView{
    border: 6px solid #333;
    color: #888;
    font-size: 10px;
    font-weight: bold;
    margin-top: 5px;
    margin-bottom: 5px;
  }

  #library #browser QListView:focus{
    border-color: #E09900;
  }

  #library #browser QListView::item{
    background-color: rgba(10,10,10,50%);
    border: 2px solid #333;
    border-radius: 8px;
    margin: 1px;
  }

  #library #browser QListView::item:selected{
    background-color: #333;
    color: #FFF;
  }

  #library #browser QListView::item:selected:focus{
    border-color: #E09900;
  }


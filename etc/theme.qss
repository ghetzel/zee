*{
  font-family: Droid Sans;
}

#root{
/*	DEMO - Transparent Gradient
  background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 rgba(0,0,0,100%), stop:1 rgba(0,0,0,0%)); */
  background-color: rgba(0,0,0,0%);
  background-position: top left;
/*  background-image: url(gfx/carbon-1.png); */
  border: 0px;
}


QLabel{
  color: #FFF;
}

QPushButton{
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #282726, stop:0.8125 #070400, stop:1 #070400);
  border: 0px;
  border-bottom: 4px solid #CC7000;
  color: #FFF;
}

  QPushButton:hover{
    border-color: #FFAE00;
  }

  QPushButton:focus{
    font-weight: bold;
  }

/*QWebView{
  border: 1px solid #C00;
  border-radius: 10px;
}*/

QGroupBox::title{
  background-color: #C00;
  color: #FFF;
}

*[element="zui:container"]{
}

*[cls~="actions"]{
  min-width: 155px;
  max-width: 155px;
}

*[cls~="masthead"]{
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #282726, stop:0.8125 #070400, stop:1 #070400);
  min-height: 32px;
  max-height: 32px;
}

  *[cls~="masthead"] > *[cls~="action"]{
    border: 0px;
  }

*[cls~="actions"] > *[cls~="action"]{
  height: 92px;
}

#communications{
  padding-left: 155px;
}

QPushButton[cls~="comm"]{
  height: 124px;
  margin: 4px;
  width: 298px;
}

*[cls~="controls"]{
  min-height: 32px;
  max-height: 32px;
}

  *[cls~="controls"] > QPushButton{
    /*background-color: #CC7000;*/
    background-image: url(gfx/bg.png);
    background-position: top left;
    background-repeat: repeat-x;
    border: 0px;
    color: #FFF;
    font-family: Akzidenz Grotesk Light;
    font-size: 14px;
    height: 32px;
  }


*[element~="zui:footer"]{
  background-color: #000;
  border-top: 1px solid #888;
  min-height: 16px;
  max-height: 16px;
}


ZTaskbar{
  background-color: rgba(0,0,0,0%);
  border: 1px solid #3C3D4D;
  margin: 1px;
  max-height: 32px;
  min-height: 32px;
}

  ZTaskbar::item{
    border: 1px solid #FFF;
    margin: 2px;
  }

  ZTaskbar::item:selected{
    background-color: rgba(100,100,100,50%);
  }


ZGenericDial{
  alternate-background-color: #FFF;
  background-color: rgba(0,0,0,50%);
  color: rgba(204,112,0,100%);
  font-family: Akzidenz Grotesk Light;
}

ZFileBrowser{
  background-color: rgba(0,0,0,0);
  border-width: 0px;
  color: #FFF;
  font-size: 16px;
}

  ZFileBrowser::item{
    border-bottom: 1px solid qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #000, stop:0.5 #888, stop:1 #000);;
    height: 48px;
  }

  ZFileBrowser::item:selected{
    background-color: #CC7000;
    color: #FFF;
  }

ZFolderView{
  font-size: 8pt;
}

  ZFolderView::item{
    border: 0px;
    height: 100%;
    margin: 2px;
    width: 100%;
  }

  ZFolderView::item:selected{
    background-color: #CC7000;
    color: #FFF;
  }


ZMapWidget{
  border: 1px solid red;
}

  ZMapWidget *[cls~="toolbar"]
  {
    background-color: rgba(0,0,0,70%);
    border: 2px solid #FFAE00;
    border-radius: 8px;
    color: #FFF;
    margin: 8px;
    spacing: 0;
  }

    ZMapWidget *[cls~="toolbar"] > QToolButton{
      border: 0px;
      color: #FFF;
      margin: 0px;
      padding-left: 4px;
      padding-right: 4px;
    }

      ZMapWidget *[cls~="toolbar"] > QToolButton:hover{
        background-color: #FFAE00;
        border: 0px;
        color: #000;
      }


  ZMapWidget *[cls~="viewbar"]{
    max-width: 100px;
    min-width: 100px;
  }

    ZMapWidget *[cls~="viewbar"] > ZButton{
      background: rgba(0,0,0,80%);
      border: 2px solid #FFAE00;
      border-radius: 16px;
      font-size: 24px;
      margin: 8px;
      max-width: 48px;
      min-height: 32px;
    }

      ZMapWidget *[cls~="viewbar"] > ZButton:hover{
        background: rgba(0,0,0,90%);
      }

  ZMapWidget *[cls~="infobar"]{
    background: rgba(0,0,0,80%);
    max-height: 64px;
    min-height: 64px;
    padding-top: 4px;
    padding-bottom: 4px;
  }

    ZMapWidget ZRoadsignWidget{
      margin-right: 4px;
      max-width: 204px;
      min-height: 64px;
      min-width: 0px;
    }

      ZMapWidget ZRoadsignWidget > *[cls~="icon"]{
        min-height: 56px;
        min-width: 56px;
      }

    ZMapWidget *[cls~="roads"]{
      font-size: 18px;
      font-weight: bold;
    }

    ZMapWidget *[cls~="municipality"]{
      font-size: 14px;
      font-weight: bold;
    }
QDial{
  background-color: rgba(0,0,0,70%);
  border: 2px solid #CC7000;
  color: #CC7000;
}


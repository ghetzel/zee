<?xml version="1.0" encoding="UTF-8"?>
<zee
  xmlns:zee="http://www.gammazeta.net/zee/core/"
  xmlns:zdm="http://www.gammazeta.net/zee/zdm/"
  xmlns:zui="http://www.gammazeta.net/zee/zui/">
	<zee:components>
		<zee:timer id="tm" countdown="2010-09-17 18:00:00" tracking="11" />
		
		<zee:formatter id="countdownFormat" type="date" method="format" value="d:hh:mm:ss.zzz || u" />
		
	    <!--<zee:transform id="dateTransformer" />-->
	</zee:components>
	
	<zee:widgets>
	    <zui:application width="100%" height="96" type="desktop" position="nw">
            <zui:marquee id="time" images="../../dev/njt-segmented-sign/chars/%1.svg" width="80" height="120" />
   	    </zui:application>
	</zee:widgets>
	
	<zee:events>
		<zee:connect from="tm.remaining" to="countdownFormat.transform" direct="false" />
    	<zee:connect from="countdownFormat.ready" to="time.setText" direct="false" />
		<zee:connect from="tm.timeout" to="zee.quit" />
	</zee:events>
</zee>

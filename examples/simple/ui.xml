<?xml version="1.0" encoding="UTF-8"?>
<zee
  xmlns:zee="http://www.gammazeta.net/zee/core/"
  xmlns:zui="http://www.gammazeta.net/zee/zui/">
	<zee:components>
		<zee:countdown id="tm" target="today 17:50:00" />
		
		<zee:formatter id="countdownFormat" type="date" method="format" value="mm:ss.zzz || u" />
		
	    <!--<zee:transform id="dateTransformer" />-->
	</zee:components>
	
	<zee:widgets>
	    <zui:application width="265" height="16" type="desktop" position="n">
	            <zui:marquee id="time" images="../../dev/visitor-segments/%1.png" width="24" height="24" />
   	    </zui:application>
	</zee:widgets>
	
	<zee:events>
		<zee:connect from="tm.remaining" to="time.setText" formatter="countdownFormat" />
		<zee:connect from="tm.timeout" to="zee.quit" />
	</zee:events>
</zee>

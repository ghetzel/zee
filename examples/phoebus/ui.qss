ZRoot{
  background-color: rgba(0,0,0,70%);
  background-position: top left;
  background-image: url("/home/ghetzel/projects/zee/dev/gfx/dash-pattern-128.png");
  border: 0px;
  min-height: 480px;
  min-width: 800px;
}

ZLabel{
  color: #FFF;
}

ZButton{
    background-color: #222;
    border: 2px solid #444;
    color: #FFF;
}

ZGenericDial{
	background: qradialgradient(cx:0.5, cy: 0.5, fx:0.5, fy:0.5, radius: 1,
                 stop:0 #111, stop:1 #333);
	alternate-background-color: qconicalgradient(cx:0, cy:0, angle:90,
                 stop:0 green, stop: 0.3 yellow, stop: 0.6 #E07000, stop:1 red);
	color: transparent;
	min-width: 64px;
	min-height: 64px;
	max-width: 64px;
	max-height: 64px;
}

ZTextInput{
	background-color: rgba(0,0,0,70%);
	border: 2px solid #444;
	color: #FFF;
	margin: 2px;
}

#mainbar{
	background-color: rgb(3, 3, 3, 75%);
	border-top: 1px solid #444;
	border-bottom: 1px solid #444;
	padding: 2px;
	max-height: 96px;
}

	#mainbar #npVitals{
		margin: 6px 8px;
		margin-bottom: 0px;
		padding-bottom: 2px;
		max-height: 12px;
		min-height: 12px;
	}
	
	#mainbar #npDetails{
	    border: 1px solid #444;
	    border-radius: 10px;
	    margin: 3px 6px;
	}

	#mainbar > #npTime{
		max-width: 116px;
		min-width: 116px;
	}

		#currentArt{
			background: #444 middle middle no-repeat;
			border-radius: 7px;
			max-height: 68px;
			max-width: 68px;
			min-height: 68px;
			min-width: 68px;
		}

	#currentTitle{
		font-family: Akzidenz Grotesk Roman;
		font-size: 24px;
		font-weight: bold;
		margin-bottom: 2px;
		margin-left: 8px;
		min-width: 760px;
	}

	#currentArtist{
		font-family: Akzidenz Grotesk Light;
		font-size: 16px;
		font-weight: bold;
		margin-left: 10px;
		margin-bottom: 4px;
		min-width: 760px;
	}

	#currentAlbum{
		font-family: Akzidenz Grotesk Light;
		font-size: 14px;
		font-style: italic;
		font-weight: bold;
		margin-left: 10px;
	}

	#seekbar{
		background-color: transparent;
		border: 1px solid #E07000;
		color: transparent;
		max-height: 6px;
		min-height: 6px;
		min-width: 776px;
		padding: 1px;
		qproperty-bookmarkColor: rgba(128,128,128,50%);
	}

#seekbar::chunk{
		background-color: #E07000;
}

	#currentTime{
		color: #AAA;
		font-family: Droid Sans Mono;
		font-size: 32px;
		font-weight: bold;
		max-height: 36px;
	}

	#currentLength{
		color: #AAA;
		font-family: Droid Sans Mono;
		font-size: 14px;
		font-weight: bold;
		max-height: 36px;
	}

	QListView{
		border: 6px solid #444;
		color: #888;
		font-size: 10px;
		font-weight: bold;
		margin-top: 5px;
		margin-bottom: 5px;
	}

	QListView:focus{
		border-color: #E07000;
	}

	QListView::item{
		background-color: rgba(10,10,10,50%);
		border: 2px solid #333;
		border-radius: 8px;
		margin: 1px;
	}

	QListView::item:selected{
		background-color: #333;
		color: #FFF;
	}

	QListView::item:selected:focus{
		border-color: #E07000;
	}

	QScrollBar{
		width: 0px;
	}


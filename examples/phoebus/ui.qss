	#sidebar{
		background-color: rgba(7,4,0,75%);
		border-left: 0px;
		border-radius: 20px 110px;
		margin-left: -20px;
		max-width: 200px;
		min-width: 200px;
		padding: 4px 20px 4px 24px;
	}

	#queue, #browser{
		background-color: rgba(7,4,0,75%);
		border-right: 0px;
		border-radius: 20px 110px;
		margin-left: 10px;
		margin-right: -20px;
		padding: 4px 24px 4px 20px;
	}

#controls{
    min-height: 32px;
}

	#controls ZButton{
        background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #282726, stop:0.8125 #070400, stop:1 #070400);
        border: 0px;
        border-bottom: 4px solid #CC7000;
        color: #FFF;
        min-height: 32px;
    }

	#controls ZButton:hover{
		background-color: #E08223;
		color: #FFF;
	}

